{% extends 'EresusCmsBundle:Base:Default.html.twig' %}

{% set pageTitle = 'Перемещение раздела' %}

{% block contents %}
<div class="box form">
    <div class="box__header">Перемещение {{ section.caption }}</div>
    <div class="box__contents">
        <form action="{{ path('admin.content.move', {'id': section.id}) }}" method="post">
            <div class="message message_type_warning">
                <strong>Внимание!</strong><br>
                После перемещения изменится адрес перемещаемого раздела и всех его подразделов.
            </div>
            {% if errors is defined %}
                <div class="message message_type_error">
                    <ul>
                        {% for error in errors %}
                            <li>{{ error }}</li>
                        {% endfor %}
                    </ul>
                </div>
            {% endif %}
            <div class="form__row">
                <label for="sections-target-input" class="form__label">Переместить в:</label>
                <select name="target" id="sections-target-input" class="form__input">
                    <option value="{{ root.id }}">{{ root.caption }}</option>
                    {% include 'EresusCmsBundle:Content:MoveOptions.html.twig' with {'level': 0} %}
                </select>
            </div>
            <div class="form__footer">
                <button type="submit" class="button button_has_icon button_icon_ok">
                    Переместить
                </button>
                <button type="button" class="button button_has_icon button_icon_cancel"
                    onclick="{{ path('admin.content') }}">
                    Отменить
                </button>
            </div>
        </form>
    </div>
</div>
{% endblock %}